<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pagebg"
    tools:context=".LoginActivity" >

    <include
        android:id="@+id/include_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        layout="@layout/layout_title" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_layout" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Spinner
                    android:id="@+id/sp_category"
                    android:layout_width="0dp"
                       style="@style/spinner_style"
                     android:animationCache="true"
    				android:drawSelectorOnTop="true"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/sp_project"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                       style="@style/spinner_style"
                     android:animationCache="true"
                     android:layout_marginLeft="5dp"
    				android:drawSelectorOnTop="true"
                    android:layout_weight="1" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <EditText
                    android:id="@+id/edit_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:hint="请输入数量"
                    android:inputType="number" >
                </EditText>

                <TextView
                    android:id="@+id/text_unit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="处"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/bt_law"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                     android:layout_weight="2.2"
                    android:background="@drawable/findlaw" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <Spinner
                    android:id="@+id/sp_road"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                       style="@style/spinner_style"
                     android:animationCache="true"
    				android:drawSelectorOnTop="true"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/sp_lane"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                     style="@style/spinner_style"
                     android:animationCache="true"
    				android:drawSelectorOnTop="true"
    				android:layout_marginLeft="5dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                 android:layout_marginTop="10dp" >
                
                
                <EditText
                    android:id="@+id/edit_zhuanghao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="请输入桩号" >
                </EditText>

               
            </LinearLayout>

     

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/detaildiver"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/frontimg" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="照片描述"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/bule" />
            </LinearLayout>
            <com.miles.maipu.util.UGallery 
                 android:id="@+id/gallery_photo"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="300dp"/>
            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/emptyphoto" />

            <EditText
                android:id="@+id/edit_descrption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="请输入案件描述信息" >
            </EditText>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>