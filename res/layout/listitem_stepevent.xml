<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/wxlitmbg"
        android:padding="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/sunit" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="受理单位："
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/graytext" />

            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/sperson" />

            <TextView
                android:id="@+id/texttitle_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接收人："
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/graytext" />

            <TextView
                android:id="@+id/text_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="路政二中队"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李华"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ImageView03"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/stime" />

            <TextView
                android:id="@+id/texttitle_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接收时间："
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/graytext" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-08-13 16:11:12"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_jiaoban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/desimg" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交办意见："
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/graytext" />

            <TextView
                android:id="@+id/text_jiaoban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-08-13 16:11:12"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_call"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/btcall" />

</RelativeLayout>